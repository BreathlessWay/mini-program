<van-button bindtap="handleAddGood">添加商品</van-button>
<swiper autoplay="{{ true }}" indicator-dots="{{ true }}">
  <block wx:for="{{banner}}" wx:key="_id">
    <swiper-item>
      <image src="{{ item.img }}" style="width: 100%; height: 100%;" />
    </swiper-item>
  </block>
</swiper>
<view wx:for="{{ list }}" wx:key="_id">
  <van-card lazy-load="{{ true }}" num="{{ item.count||0 }}" price="{{ item.price }}" desc="{{ item.desc }}" title="{{ item.title }}" thumb="{{ item.img }}" bindtap="handleJump" data-id="{{ item._id }}">
    <view slot="tags" class="flex">
      <van-tag plain type="danger" wx:for="{{ item.tags }}" wx:for-index="idx" wx:for-item="tag" wx:key="idx">{{ tag }}</van-tag>
    </view>
    <view slot="footer">
      <van-button size='mini' icon="plus" catchtap="handleAddCart" />
      <van-button size='mini' icon="minus" catchtap="handleDeleteCart" />
    </view>
  </van-card>
</view>