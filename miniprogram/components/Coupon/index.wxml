<!--components/Coupon/index.wxml-->
<view class="coupon-item">
  <view class="coupon-item__left" style="background-image: url({{ item.has ? '../../images/djq_gray.png' : '../../images/djq_red.png' }})">
    <view class="coupon-item__left-wrap">
      <shop-price value="{{ item.jian/100 }}" decimal="none" color="#fff" />
      <view class="coupon-item__left-jian">
        <text wx:if="{{ item.man }}" style="white-space: nowrap;">满{{ item.man/100 }}可用</text>
      </view>
    </view>
  </view>
  <view class="coupon-item__right" style="background-image: url({{ item.has ? '../../images/djq_right_gray.png' : '../../images/djq_right_red.png' }})">
    <view class="coupon-item__right-wrap">
      <view>
        <text style="color: {{ item.has?'#bfbfbf':'#fff' }}">代金券</text>
      </view>
      <van-button bind:click="handleClick" disabled="{{ item.has }}" size="small" plain hairline color="#fff" custom-style="font-size: 24rpx; width: 120rpx; height: 40rpx; line-height: 40rpx; padding: 0; background: none">
        {{ item.has?'已领取':'点击领取' }}
      </van-button>
    </view>
  </view>
</view>