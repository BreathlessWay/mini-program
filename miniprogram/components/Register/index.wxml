<van-dialog use-slot title="注册" show="{{ true }}" showConfirmButton="{{ false }}" closeOnClickOverlay="{{ true }}" bind:close="handleClose">
  <view class="login">
    <block wx:if="{{ getPhone }}">
      <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="van-button van-button--primary van-button--large" hover-class="van-button--active hover-class">
        <van-icon size="1.4em" name="phone-o" class="van-button__icon" custom-style="line-height: inherit;" />
        <view class="van-button__text" style="margin-top: -4rpx;">获取手机号</view>
      </button>
    </block>
    <block wx:else>
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile" class="van-button van-button--primary van-button--large" hover-class="van-button--active hover-class">
        <van-icon size="1.2em" name="manager-o" class="van-button__icon" custom-style="line-height: inherit;" />
        <view class="van-button__text">注册新用户</view>
      </button>
      <button wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="van-button van-button--primary van-button--large" hover-class="van-button--active hover-class">
        <van-icon size="1.2em" name="manager-o" class="van-button__icon" custom-style="line-height: inherit;" />
        <view class="van-button__text">注册新用户</view>
      </button>
    </block>
  </view>
</van-dialog>
