<!--pages/index/index.wxml-->
<view wx:if="{{ mode }}">
    <view class="home-user" wx:if="{{ !userInfo }}">

        <view>
            <van-icon name="user-circle-o"/>
            <text>未登录</text>
        </view>
        <view bind:tap="login">[ 登录 ]</view>
    </view>
    <view wx:else>
        <text>{{ userInfo.nickName }}</text>
    </view>
</view>
<shop-initial wx:else/>
<shop-register wx:if="{{ register }}" bind:register="setUserInfo"/>
<van-toast id="van-toast"/>
