<wxs module="utils" src="./utils.wxs" />
<nav-header lastHeSuanTime="{{ userInfo ? userInfo.lastHeSuanTime : undefined }}" expiration="{{ userInfo ? userInfo.expiration : undefined }}" isLogin="{{ !!userInfo }}" bindupdateTime="emitUpdateUserInfo" />
<banner userInfo="{{ userInfo }}" oneData="{{ oneData }}" soulSoupData="{{ soulSoupData }}" bindlogin="login" bindlogout="logout" register="{{ register }}" />
<view wx:if="{{userInfo}}" class="time-wrap">
  <van-cell-group inset border="{{ false }}">
    <van-cell title="最近一次核酸时间" value="{{ utils.formartTime(userInfo.lastHeSuanTime) || '尚未设置' }}" border="{{ false }}" label="此时间为核酸采集时间" center />
    <van-cell title="核酸结果有效时间" value="{{ userInfo.expiration ? userInfo.expiration + ' 小时' : '' }}" border="{{ false }}" />
  </van-cell-group>
  <!-- <view>
    <text>距离核酸过期还有：</text>
    <van-count-down time="{{ time }}" format="DD 天 HH 时 mm 分" />
  </view> -->
</view>
<block wx:else>
  <block wx:if="{{register}}">
    <login bindupdateUserInfo="emitUpdateUserInfo" />
  </block>
</block>
<intro />
<van-toast id="van-toast" />