.time-wrap {
  padding: 40rpx 0;
  color: #323233;
}

.time-count {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 40rpx;
  color: #ff976a
}

.time-count_list {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}

.time-count_item {
  margin-right: 5px;
  color: #fff;
  font-size: 60rpx;
  text-align: center;
  background-color: #07c160;
  border-radius: 2px;
  padding: 6rpx 14rpx;
}

.time-count_warn {
  padding: 0 60rpx;
  color: #ee0a24;
  font-size: 36rpx;
  font-weight: bold;
}

.time-count_tips {
  color: #ee0a24;
  font-size: 24rpx;
}